<!DOCTYPE html>
<html>
  <head>
    <title>Administator</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>
  </head>
  
  <body>
	<h1> Price Comparer </h1>
    <table>
	<thead>
		<tr>
		<th>Nome</th>
		<th>Email</th>
		<th>Ruoli</th>
	</thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
    	<td><%= user.isAdministrator ? "Amministratore" : "" %> &emsp; <%= user.isAnalyst ? "Analista" : "" %> </td>
	  	<td> <%= button_to "Toggle amministratore", toggle_admin_user_path(user), method: :patch %> </td>
		<td> <%= button_to "Toggle analista", toggle_analyst_user_path(user), method: :patch %> </td>
	  </tr>
    <% end %>
  </tbody>
  </table>

  </body>
</html>
