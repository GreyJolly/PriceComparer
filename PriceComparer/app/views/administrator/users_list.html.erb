<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Administrator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <style>
        .flash-error {
            background-color: #ffebee; /* Light red background */
            color: #d32f2f; /* Dark red text */
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .btn-toggle {
            margin-top: 5px;
        }
        .header {
            background-color: #4CAF50; /* Verde */
            padding: 20px;
            color: white;
            text-align: center; /* Center align text */
        }
        .container {
            margin-top: 30px;
        }
        .table-container {
            overflow-x: auto;
        }
        table {
            width: 100%;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        .checkbox-group {
            margin-bottom: 20px;
        }
        .checkbox-group label {
            margin-right: 20px; /* Adds space between checkboxes */
        }
        .admin-row {
            background-color: #EE6E73; /* Light green background for administrators */
        }
    </style>
</head>
<body>
    <%= render "partials/header" %>
    <div class="header">
        <div class="container">
            <h3>Lista utenti</h3>
        </div>
    </div>

    <div class="container">
        <% if flash[:error] %>
            <div class="flash-error">
                <%= flash[:error] %>
            </div>
        <% end %>

        <%= form_with url: search_users_users_path, method: :get, local: true, html: { class: 'row' } do %>
            <div class="input-field col s12">
                <%= label_tag :query_user, "Cerca" %>
                <%= text_field_tag :query_user, params[:query_user], class: 'validate' %>
            </div>
            <div class="col s12">
                <label>
                    <%= check_box_tag :alphabetical, '1', params[:alphabetical] == '1' %>
                    <span>Ordine alfabetico</span>
                </label>
            </div>
            <div class="col s12 checkbox-group">
                <p>Filter by role:</p>
                <label>
                    <%= check_box_tag :administrator, '1', params[:administrator] == '1' %>
                    <span>Amministratore</span>
                </label>
                <label>
                    <%= check_box_tag :analyst, '1', params[:analyst] == '1' %>
                    <span>Analista</span>
                </label>
                <label>
                    <%= check_box_tag :neither_role, '1', params[:neither_role] == '1' %>
                    <span>Nessun ruolo</span>
                </label>
            </div>
            <div class="col s12">
                <%= submit_tag "Search", class: 'btn waves-effect waves-light' %>
            </div>
        <% end %>

        <div class="table-container">
            <table class="highlight">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Ruoli</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr class="<%= 'admin-row' if user.isAdministrator %>">
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td>
                                <%= user.isAdministrator ? "Amministratore" : "" %> 
                                <%= user.isAnalyst ? "Analista" : "" %>
                            </td>
                            <td>
                                <%= button_to "Toggle amministratore", toggle_admin_user_path(user), method: :patch, class: 'btn btn-toggle waves-effect waves-light orange' %>
                                <%= button_to "Toggle analista", toggle_analyst_user_path(user), method: :patch, class: 'btn btn-toggle waves-effect waves-light blue' %>
								<%= button_to "Mostra wishlist", wishlist_path, method: :get, params: { user: user.username } %></li>
							</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col s12">
                <p>Numero di analisti: <%= @analyst_count %></p>
                <p>Numero di amministratori: <%= @administrator_count %></p>
                <p>Numero di amministratori e analisti: <%= @analystAdministrato_count %></p>
            </div>
        </div>
    </div>
</body>
</html>
