<!DOCTYPE html>
<html>
  <head>
    <title>Administator</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>
  </head>
  
  <body>
    <h1> Price Comparer </h1>
    <%= form_with url: search_users_users_path, method: :get, local: true do %>
      <div class="field">
        <%= label_tag :query_user, "Search" %>
        <%= text_field_tag :query_user, params[:query_user] %>
      </div>
          
      <div>
        <%= radio_button_tag :order, 'alphabetical', params[:order] == 'alphabetical' %>
        <%= label_tag :order_alphabetical, 'Alphabetical' %>
      </div>
      
      <div>
        <%= radio_button_tag :order, 'non_alphabetical', params[:order] == 'non_alphabetical' %>
        <%= label_tag :order_non_alphabetical, 'Non-Alphabetical' %>
      </div>

      <div class="actions"> <%= submit_tag "Search" %> </div>

    <% end %>

    <table>
      <thead>
        <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Ruoli</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          <td><%= user.isAdministrator ? "Amministratore" : "" %> &emsp; <%= user.isAnalyst ? "Analista" : "" %> </td>
          <td> <%= button_to "Toggle amministratore", toggle_admin_user_path(user), method: :patch %> </td>
        <td> <%= button_to "Toggle analista", toggle_analyst_user_path(user), method: :patch %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </body>
</html>
