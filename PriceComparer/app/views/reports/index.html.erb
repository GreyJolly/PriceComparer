<h1>Reports</h1>
<%= link_to 'New Report', new_report_path %>
<ul>
  <% @reports.each do |report| %>
    <li>
      <%= link_to report.title, report %>
      <%= link_to 'Edit', edit_report_path(report) %>
      <%= link_to 'Destroy', destroy_report_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
